    #transfer-modal(class="modal fade", tabindex="-1", role="dialog")
        div(class="modal-dialog")
            div(class="modal-content")
                div(class="modal-header")
                    button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") 
                            img.close(src="icons/close.svg", alt="close") 
                    h2(class="modal-title") Import/Export bookmarks
                    div(class="modal-body")
                        input(class="import-file", type="file", name="import-file")
                        button.export(type="button", class="btn btn-primary") Export
                        button.import(type="button", class="btn btn-primary") Import
                        .done
                        .failed

    #header
        div(class="row")
            .add
                button(class="btn btn-default add-bookmark", type="button", data-toggle="modal", data-target="#add-modal") 
                    img(src="icons/add.svg", alt="add")
                    div(class="add-bookmark-title") Add a new bookmark
            .or or
            form.search
                div(class="input-group")
                    input(class="form-control", type="text", placeholder="Search for a bookmark")
                    div(class="input-group-addon")
                        img(src="icons/search.svg", alt="search")
                p(class="help-block") Type a keyword, we will search for it in your saved bookmarks 
            .transfer
                button(class="btn btn-default transfer-bookmarks", 
                       title="import/export bookmarks",
                       type="button", 
                       data-toggle="modal", 
                       data-target="#transfer-modal") 
                    span(class="glyphicon glyphicon-transfer")

    #tags-toggle(class="row")
        .buttons(class="col-xs-offset-1 col-sm-offset-9")
            .tags-show
                img(src="icons/hide-show.svg", alt="show")
                | show tags
            .tags-hide
                img(src="icons/hide-show.svg", alt="show")
                | hide tags
    #tags

    #loader(class="loader-inner ball-pulse")
        p Loading bookmarks, please wait ...

    #bookmarks
        ul.list