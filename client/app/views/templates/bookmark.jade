div(class="row")
    .main
        .title(class="col-xs-9 col-sm-11 col-md-4")
            a(href=httpUrl, target="_blank") #{htmlTitle}
        .url(class="col-xs-9 col-sm-6 col-md-5") 
            a(href=httpUrl, target="_blank") #{url}
        .infos(class="col-xs-9 col-sm-5 col-md-2") 
            .tags #{readableTags}
            .date #{date}
        .actions
            button(type="button", class="btn btn-primary edit") 
                span(class="glyphicon glyphicon-pencil") 
            button(type="button", class="btn btn-primary remove") 
                span(class="glyphicon glyphicon-remove") 
    .more
        .description(class="col-xs-11") #{description}