// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

main-background = #41454d
main-color = #c6c6c6
button-background = #d4cfc7
button-color = #616164
button-background-invert = #616164
button-color-invert = #d4cfc7
modal-background = #ecebe9
modal-color = #676766
modal-input-background = #f6f5f3
modal-input-color = #888786

tags-background = #616167
tags-color = #d4cfc7

loader-background = #ecebe9
loader-color = #58493e

list-background = #ecebe9
list-color = #58493e
list-hightlight-background = #f4f3f0
list-hightlight-color = #ec4e1b

body
    background: list-background;
    color: list-color;
    font-family: "Open Sans", sans-serif

.row
    margin: 0

#content
    .btn
        font-weight: bolder
        font-size: 1.5em
        text-shadow: none
        white-space: normal
        span
            margin-right: 1em
    input
        height: 2em
        font-size: 1.5em
        box-shadow: none
        border: none

#header
    color: main-color
    background: main-background

    font-size: 1.5em
    padding-top: 3em
    padding-bottom: 3em
    padding-left: 10%
    padding-right: 10%
    button
        background: button-background
        color: button-color
        height: 2.5em
        padding-left: 1em
        padding-right: 1em
    .add 
        text-align: right
    .or
        margin-top: 1em
        text-align: center
    .search
        input
            background: button-background
            color: button-color
            height: 2.5em
            padding-left: 1em
            padding-right: 1em
        .input-group-addon
            background: button-background
            color: button-color
            cursor: pointer
            img
                margin-left: .2em
                opacity: .7
                height: 2.5em
    .help-block
        text-align: center

#add-modal
#edit-modal
    .modal-content
        background: modal-background
        color: modal-color

        .modal-header
            font-size: 1.5em
            text-align: center

        .modal-footer
            button
                border: 0
                background: button-background-invert
                color: button-color-invert
            span
                margin-right: .25em
    

#tags-toggle
    color: main-color
    background: main-background
    font-size: 1.5em
    .tags-show
    .tags-hide
        text-align: center
        background: tags-background
        color: tags-color
        width: 50%
        padding: .25em
        span
            margin-right: .25em
            vertical-align: sub
    .tags-hide
        display: none

#tags
    min-height: 2em
    background: tags-background
    color: tags-color

#loader
    background: list-background
    color: list-color
    display: none

 #bookmarks
    margin: 1em
    .list
        list-style: none

    .bookmark
        margin: 0 10%
        padding: .5em 0 0 0 
        font-size: 1.5em
        border-radius: 25px 

        .row
            padding: 0
            margin: 0

        .title
            a
            a:active
            a:visited
                font-size: 1.1em
                font-weight: bolder
                color: list-color
        .url
            overflow: ellipsis
            font-style: italic
            &:hover
                white-space: initial
                word-wrap: break-word
                overflow: initial
            a
            a:active
            a:visited
                color: list-color
        .infos
            opacity: .9
            text-align: right
            .date
                font-size: .8em
                font-style: italic
        .description
            opacity: .9
            padding: 1em
            border-bottom: 1px #ccc solid

        &:hover
            background: list-hightlight-background
            .title 
                a
                a:active
                a:visited
                    color: list-hightlight-color
            .description
                border-radius: 0 0 0 25px 
            .actions
                display: block

        .actions
            display: none
            text-align: right
            button
                background: inherit
                color: inherit
                text-align: center
                font-size: 1em
                font-weight: lighter
                border: none
                box-shadow: none
                padding: 0
                margin: 0
                &:hover
                    color: list-hightlight-color